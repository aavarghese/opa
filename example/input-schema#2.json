{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$ref": "#/definitions/Input",
    "definitions": {
        "Input": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "servers": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Server"
                    }
                },
                "networks": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Network"
                    }
                },
                "ports": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Port"
                    }
                }
            },
            "required": [
                "networks",
                "ports",
                "servers"
            ],
            "title": "Input"
        },
        "Network": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "type": "string"
                },
                "public": {
                    "type": "boolean"
                }
            },
            "required": [
                "id",
                "public"
            ],
            "title": "Network"
        },
        "Port": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "type": "string"
                },
                "network": {
                    "type": "string"
                }
            },
            "required": [
                "id",
                "network"
            ],
            "title": "Port"
        },
        "Server": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "type": "string"
                },
                "protocols": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "ports": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "id",
                "ports",
                "protocols"
            ],
            "title": "Server"
        }
    }
}
